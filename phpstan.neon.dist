#        - identifier: trait.unused
#        - identifier: typePerfect.noMixedMethodCaller
#        - message: '#^Unused Guanguans\\Notify\\Rector\\.*\\.*\:\:__construct$#'

        - identifier: ergebnis.final
        - identifier: ergebnis.finalInAbstractClass
        - identifier: ergebnis.noConstructorParameterWithDefaultValue
        - identifier: ergebnis.noExtends
        - identifier: ergebnis.noIsset
        - identifier: ergebnis.noNullableReturnTypeDeclaration
        - identifier: ergebnis.noParameterPassedByReference
        - identifier: ergebnis.noParameterWithContainerTypeDeclaration
        - identifier: ergebnis.noParameterWithNullableTypeDeclaration
        - identifier: ergebnis.noParameterWithNullDefaultValue
        - identifier: shipmonk.binaryOperationWithNull
        - identifier: shipmonk.checkedExceptionInCallable
        - identifier: shipmonk.forbiddenCast
        - identifier: shipmonk.nonNormalizedType
        - identifier: shipmonk.publicPropertyNotReadonly
        - identifier: shipmonk.stringInterpolationWithNull
        - identifier: shipmonk.variableTypeOverwritten
        - identifier: symplify.explicitInterfaceSuffixName
        - identifier: symplify.explicitTraitSuffixName
        - identifier: symplify.forbiddenExtendOfNonAbstractClass
        - identifier: symplify.forbiddenFuncCall
        - identifier: symplify.forbiddenNode
        - identifier: symplify.forbiddenStaticClassConstFetch
        - identifier: symplify.noDynamicName
        - identifier: symplify.requiredInterfaceContractNamespace
        - identifier: symplify.requireExceptionNamespace

        - identifier: argument.type
        - identifier: binaryOp.invalid
        - identifier: cast.double
        - identifier: cast.string
        - identifier: complexity.classLike
        - identifier: complexity.functionLike
        - identifier: empty.notAllowed
        - identifier: guanguans.forbiddenSideEffects
        - identifier: method.dynamicName
        - identifier: method.nonObject
        - identifier: property.dynamicName
        - identifier: return.type
        - identifier: return.void
        - message: '#^Parameter \#2 \$parameters \(list\<mixed\>\) of method Guanguans\\LaravelExceptionNotify\\ExceptionNotifyManager\:\:__call\(\) should be contravariant with parameter \$parameters \(array\) of method Illuminate\\Support\\Manager\:\:__call\(\)$#'
        - message: '#^Unable to resolve the template type (TKey|TValue) in call to function collect$#'
        - message: '#^Unable to resolve the template type TObject in call to static method Guanguans\\LaravelExceptionNotify\\Support\\Utils\:\:applyConfigurationToObject\(\)$#'
        - message: '#^Unused Guanguans\\LaravelExceptionNotify\\Support\\Traits\\WithPipeArgs\:\:with$#'
        -
            identifier: missingType.iterableValue
            path: src/Facades/ExceptionNotify.php
        -
            message: '#^Calling sha1\(\) is forbidden, use hash\(\) with at least SHA\-256 for secure hash, or password_hash\(\) for passwords\.$#'
            path: src/Channels/Channel.php
        -
            message: '#^Calling env\(\) is forbidden, use config\(\) instead\.$#'
            path: src/Support/helpers.php
        -
            message: '#^Dynamic call to static method Guanguans\\LaravelExceptionNotify\\Channels\\Channel\:\:shouldReport\(\)\.$#'
            path: src/Commands/TestCommand.php
