{
    "name": "guanguans/laravel-exception-notify",
    "description": "Laravel 中异常监控报警通知(Bark、Chanify、钉钉群机器人、Discord、飞书群机器人、邮件、PushDeer、QQ 频道机器人、Server 酱、Slack、Telegram、企业微信群机器人、息知)。",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "laravel",
        "notification",
        "notify",
        "notifier",
        "exception",
        "error",
        "notice",
        "monitor",
        "SDK",
        "sdk",
        "bark",
        "chanify",
        "dingTalk",
        "discord",
        "feiShu",
        "pushDeer",
        "QQ 频道机器人",
        "serverChan",
        "slack",
        "telegram",
        "weWork",
        "xiZhi",
        "chanify",
        "钉钉群机器人",
        "机器人",
        "钉钉群",
        "钉钉",
        "飞书群机器人",
        "飞书",
        "mail",
        "Server酱",
        "企业微信群机器人",
        "企业微信",
        "微信",
        "息知"
    ],
    "authors": [
        {
            "name": "guanguans",
            "email": "ityaozm@gmail.com",
            "homepage": "https://www.guanguans.cn",
            "role": "developer"
        }
    ],
    "homepage": "https://github.com/guanguans/laravel-exception-notify",
    "support": {
        "issues": "https://github.com/guanguans/laravel-exception-notify/issues",
        "source": "https://github.com/guanguans/laravel-exception-notify"
    },
    "funding": [
        {
            "type": "wechat",
            "url": "https://www.guanguans.cn/images/wechat.jpeg"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "guanguans/notify": "^1.21",
        "illuminate/bus": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/contracts": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/events": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/http": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/log": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/queue": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/support": "^5.5 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "symfony/cache": "^5.0 || ^6.0",
        "symfony/rate-limiter": "^5.0 || ^6.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.4",
        "johnkary/phpunit-speedtrap": "^4.0",
        "mockery/mockery": "^1.3",
        "nunomaduro/collision": "^4.0 || ^5.0 || ^6.0 || ^7.0",
        "nunomaduro/larastan": "^1.0",
        "nyholm/nsa": "^1.3",
        "orchestra/testbench": "^3.0 || ^4.0 || ^5.0 || ^6.0 || ^7.0",
        "phpstan/extension-installer": "^1.1",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "rector/rector": "^0.14.8",
        "spatie/phpunit-snapshot-assertions": "^3.0 || ^4.0",
        "vimeo/psalm": "^3.11 || ^4.22"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Guanguans\\LaravelExceptionNotify\\": "src"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Guanguans\\LaravelExceptionNotify\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        },
        "hooks": {
            "post-merge": [
                "composer checks"
            ],
            "pre-commit": [
                "composer checks"
            ]
        },
        "laravel": {
            "aliases": {
                "ExceptionNotifier": "Guanguans\\LaravelExceptionNotify\\Facades\\ExceptionNotify",
                "ExceptionNotify": "Guanguans\\LaravelExceptionNotify\\Facades\\ExceptionNotify"
            },
            "providers": [
                "Guanguans\\LaravelExceptionNotify\\ExceptionNotifyServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "post-update-cmd": [
            "cghooks update"
        ],
        "cghooks": "./vendor/bin/cghooks",
        "checks": [
            "@mark-start",
            "@style-lint",
            "@mark-separate",
            "@test",
            "@mark-separate",
            "@psalm",
            "@mark-finish"
        ],
        "mark-finish": "printf '\\n!\\n!\\t\\033[0;32m%s\\033[0m\\n!\\n\\n' \"Finished\"",
        "mark-separate": "printf '\\n!\\n!\\t\\033[0;33m%s\\033[0m\\n!\\n\\n' \"----------------\"",
        "mark-start": "printf '\\n!\\n!\\t\\033[0;36m%s\\033[0m\\n!\\n\\n' \"Started\"",
        "md-fix": "@md-lint --fix",
        "md-lint": "lint-md --config .lintmdrc ./*.md ./.github/ ./docs/",
        "phpstan": "./vendor/bin/phpstan analyse -vv",
        "phpstan-baseline": "@phpstan --generate-baseline",
        "post-merge": [
            "composer install"
        ],
        "psalm": "./vendor/bin/psalm",
        "psalm-baseline": "@psalm --update-baseline",
        "rector": "./vendor/bin/rector --clear-cache --ansi -v",
        "rector-dry-run": "@rector --dry-run",
        "style-fix": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.php --ansi",
        "style-lint": "@style-fix --diff --dry-run",
        "test": "./vendor/bin/phpunit --cache-result-file=./build/phpunit/.phpunit.result.cache",
        "test-coverage": "@test --coverage-html=./build/phpunit/ --coverage-clover=clover.xml"
    }
}
